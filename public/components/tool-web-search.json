{
  "id": "tool-web-search",
  "type": "tool",
  "name": "Web Search",
  "version": "1.0.0",
  "provider": "brave",
  "config": {
    "endpoint": "https://api.search.brave.com/res/v1/web/search",
    "auth_type": "bearer",
    "method": "GET",
    "parameters": {
      "required": ["q"],
      "optional": ["count", "freshness"]
    }
  },
  "interface": {
    "inputs": ["query"],
    "outputs": ["results", "snippets"],
    "capabilities": ["web_search", "current_information"]
  },
  "resources": {
    "rate_limits": {
      "requests_per_minute": 60,
      "requests_per_month": 2000
    }
  },
  "metadata": {
    "author": "AgentEX",
    "description": "Search the web for current information",
    "tags": ["search", "web", "information"],
    "icon": "üîç",
    "color": "#FB542B"
  }
}
